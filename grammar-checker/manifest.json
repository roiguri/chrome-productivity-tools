{
  "manifest_version": 3,
  "name": "Grammar Checker",
  "version": "1.0.0",
  "description": "Checks grammar and spelling in the active input field using LanguageTool.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "commands": {
    "check_grammar": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G"
      },
      "description": "Check grammar in focused field"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
