{
  "manifest_version": 3,
  "name": "Direction Switcher",
  "version": "1.0.0",
  "description": "Pick any element on the page and toggle its text direction (RTL/LTR) with a click.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Direction Switcher",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "toggle-picker": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "Toggle Direction Picker"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
