{
  "manifest_version": 3,
  "name": "Google Docs Equation Shortcut",
  "version": "1.0.0",
  "description": "Add Alt+= keyboard shortcut to insert equations in Google Docs (matches Microsoft Word behavior)",

  "permissions": [],

  "host_permissions": [
    "https://docs.google.com/*"
  ],

  "content_scripts": [{
    "matches": ["https://docs.google.com/document/*"],
    "js": ["equation-trigger.js", "content-script.js"],
    "run_at": "document_end",
    "all_frames": true,
    "match_about_blank": true
  }],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
